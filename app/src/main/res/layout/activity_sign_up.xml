    android:id="@+id/button1"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="Sign Up"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/red"/>
</LinearLayout>